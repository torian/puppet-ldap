access to dn.subtree="<%= @suffix %>" attrs=objectClass,entry,gecos,homeDirectory,uid,uidNumber,gidNumber,cn,memberUid
<% if @syncprov and @sync_binddn != false then -%>
	by dn.exact="<%= @sync_binddn %>" read
<% end -%>
	by * read

